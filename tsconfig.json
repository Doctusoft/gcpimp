{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
          "es2015",
          "dom"
        ],
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceRoot": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "noEmitHelpers": false,
        "jsx": "react",
    },
    "include": [
        "src/**/*.ts",
        "node_modules/@types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}
