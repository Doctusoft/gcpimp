{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceRoot": "./src",
        "outDir": "./dist",
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "node_modules/@types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}